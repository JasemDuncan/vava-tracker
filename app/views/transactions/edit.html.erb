<%= stylesheet_link_tag 'transactions', media: 'all' %>    
<%= @transaction.errors.full_messages do |message|%>
    <div>
        *<%= message %>
    </div>
<%end%>


<div class="container-all-create">
  <div class="header">
    <div class="back">
      <%= link_to transactions_path, class:'link' do %>
        <i class="fas fa-arrow-left text-light"></i>
      <% end %>
    </div>
    <div class="d-flex text-center flex-column pt-2 label-title">
      <h4 class="title text-uppercase text-light"> Edit Subject</h4>    
    </div>
    <div class="new">   
      <%= link_to 'Delete', @transaction,  class: "button", method: :delete%>
    </div>
  </div>


  <%= form_for(@transaction) do |f|%>    
    <div class="create-all">  
        <div class="expense_big-container d-flex align-items-center bg-light mt-3 create-items">        
          <div class="my-3 p-2 d-flex flex-column w-100">                   
            <%= f.collection_select :group_id, Group.all, :id, :name, include_blank: 'None', prompt: 'Select group' %>
          </div>        
        </div> 
        <div class="expense_big-container d-flex align-items-center bg-light mt-3 create-items">        
          <div class="my-3 p-2 d-flex flex-column w-100">                   
              <%= f.text_field :name, placeholder: "Name"%>
          </div>        
        </div>  
        <div class="expense_big-container d-flex align-items-center bg-light mt-3 create-items">        
          <div class="my-3 p-2 d-flex flex-column w-100">                   
            <%= f.text_field :amount, placeholder: "Amount"%>
          </div>      
        </div>  
    </div>
    <div class="bg-success d-flex mt-2 align-items-center text-center">
      <div class="mt-4 mb-4 text-light text-casual-bold text-size mx-auto link" >
        <%= f.submit 'Save subject',class:"text-uppercase  bg-success text-white" %>  
      </div>
    </div>
  <%end%>

</div>