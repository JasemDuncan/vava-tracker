<%= stylesheet_link_tag 'user', media: 'all' %>
<% unless user_signed_in? %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">                    
                <h1 >Snapscan</h1>        
                asdad                            
            </div>            
        </div>
        <div class="row justify-content-center">
            <div class="col-8">                    
                <%= link_to 'Log In', new_user_session_path, class:'btn btn-primary btnBlue' %>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-8">                    
                <%= link_to 'Sign Up', new_user_registration_path,class:'btn0 btnWhite'%>
            </div>
        </div>
    </div>    
    
<%else%>     
<div class="user-background d-flex flex-column justify-content-between">

  <div class="userpage_header-cont mt-5 d-flex flex-column align-items-center justify-content-center">    
    <div class="text-center mb-3">
      <h1 class="text-light">Welcome</h1>
      <h3 class="text-light"><%= current_user.email%></h3>      
    </div>
  </div>

  <div>
    <div class=" d-flex align-items-center">
      <div class="user-logo-element">
        <div class="circle-logo text-light">          
          <span class="logo-size">&#128221;</span>
        </div>
      </div>
      <div class="user-text-element text-light">
        <%= link_to 'All my subjects', transactions_path, class:'link text-light text-size' %>
      </div>
    </div>

    <div class="d-flex align-items-center">
      <div class="user-logo-element">
        <div class="circle-logo text-light">
            <span class="logo-size">&#128215;</span>
        </div>
      </div>
      <div class="user-text-element text-light">
        <%= link_to 'All my external subjects', external_path, class:'link text-light text-size' %>        
      </div>
    </div>

    <div class=" d-flex align-items-center">
      <div class="user-logo-element">
        <div class="circle-logo text-light">
          <span class="logo-size">&#128218;</span>
        </div> 
      </div>
      <div class="user-text-element-last text-light">
        <%= link_to 'All my groups', groups_path, class:'link text-light text-size ' %>
      </div>
    </div>      
  </div>
    
  <div class="bg-success d-flex mt-2 align-items-center text-center">
    <%= link_to 'Log out', destroy_user_session_path, method: :delete, class:"text-uppercase mt-4 mb-4 text-light text-casual-bold text-size mx-auto link" %>      
  </div>
</div>
<%end%>




