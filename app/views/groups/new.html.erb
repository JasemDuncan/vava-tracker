<div class= "error_message">
<%= @group.errors.full_messages.to_sentence do |message|%>    
        *<%= message %>    
<%end%>
</div>

<%= stylesheet_link_tag 'transactions', media: 'all' %>    

<div class="container-all-create">
  <div class="header">
    <div class="back">
      <%= link_to groups_path, class:'link' do %>
        <i class="fas fa-arrow-left text-light"></i>
      <% end %>
    </div>
    <div class="d-flex text-center flex-column pt-2 label-title">
      <h4 class="title text-uppercase text-light">Create Group</h4>    
    </div>
    <div class="new">   
    </div>
  </div>

  <%= form_for(@group) do |f|%>    
  <div class="create-all">  
      <div class="expense_big-container d-flex align-items-center bg-light mt-3 create-items">        
        <div class="my-3 p-2 d-flex flex-column w-100">                   
            <%= f.text_field :name, palceholder: "Name"%>
        </div>
      </div>  
      <div class="expense_big-container d-flex align-items-center bg-light mt-3 create-items">        
        <div class="my-3 p-2 d-flex flex-column w-100">                   
          <%= f.label :image %>
          <%= f.file_field :image %>
        </div>
      </div>  
      
  </div>
  <div class="bg-success d-flex align-items-center text-center save-all">
    <div class="mt-4 mb-4 text-size mx-auto ">
      <%= f.submit 'Save group',class:"text-uppercase  bg-success text-white" %>  
    </div>
  </div>
  <%end%>
</div>D