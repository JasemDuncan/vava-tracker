<%= stylesheet_link_tag 'user', media: 'all' %> 
<div class="user-background d-flex flex-column justify-content-between">

  <div class="userpage_header-cont mt-5 d-flex flex-column align-items-center justify-content-center">    
    <div class="text-center mb-3">
      <h2 >
      <%= link_to root_path, class:'link' do %>
        <span>&#127968;</span>        
      <% end %>
      
      </h2>
      <h1 class="text-light">My groups</h1>
      <h3 class="text-light"><%= current_user.email%></h3>      
    </div>
  </div>

  <% @groups.each do |group|%>
  <div>

    <div class=" d-flex align-items-center">

      <div class="user-logo-element">
        <div class="circle-logo text-light">          
          <span class="logo-size">&#128210;</span>
        </div>
      </div>

      <div class="user-text-element text-light">
        <%= link_to group.name, group, class:'link text-light text-size' %>
        <p>
          <%= group.created_at%> - <%= link_to 'Delete', group,  class: "red", method: :delete%>
        </p> 
      </div>
      
    </div>

  </div>
  <%end%>
    
  <div class="bg-success d-flex mt-2 align-items-center text-center">
    <%= link_to 'Create new ', new_group_path, class:"text-uppercase mt-4 mb-4 text-light text-casual-bold text-size mx-auto link" %>      
  </div>

</div>




